{
  "redirects": [
    { "source": "/index.html", "destination": "/pdf-tools/" }
  ],
  "rewrites": [
    { "source": "/pdf-tools", "destination": "/index.html" },
    { "source": "/pdf-tools/", "destination": "/index.html" },
    { "source": "/pdf-tools/:path*", "destination": "/:path*" },
    { "source": "/((?!pdf-tools|css|js|assets|api|sw\\.js|home\\.html|manifest\\.json|ads\\.txt).*)", "destination": "/home.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    },
    {
      "source": "/(css|js)/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}